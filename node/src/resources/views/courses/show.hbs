
<div class="body ">
    <div class="col-lg-12 row" >
        <div class="col-lg-3" >
            <div class=" card-name">
                <div class="card card-item" >
                    <div class="card-body">
                        <h6 class="card-title">Bạn đã đăng ký khóa học này</h6>
                        <button  onclick="checkBuy()" id="courses" class="btn btn-primary" data-id="{{sales._id}}" data-name="{{sales.item}}">Học ngay</button>
                        <p class="card-text">Tổng số {{sales.soLuongVideo}} videos</p>
                        <p class="card-text">Trình độ {{sales.trinhDo}}</p>
                        <p class="card-text">Cần {{sales.soGio}} giờ để học</p>
                        
                    </div>
                </div>
            </div>
            <div class=" card-bottom" , style="text-align: center; margin-top: 20px">
                <div class="card card-item " style="height: 470px" >
                    <div class="card-bottom-gv">
                        <h5 class="card-title" style="margin-top: 10px;">Giáo viên </h5>
                        <img src="{{sales.teacher.img}}" alt="" class="avartagv" style="width: 250px; height: 200px; border-radius: 50%;"><br>
                        
                        <h5 class="card-text" style="margin-top: 10px;">{{sales.teacher.hoTen}}</h5>
                        <p class="card-text">Email: {{sales.teacher.email}}</p>
                        <p class="card-text">Khóa học: {{sales.teacher.soLuongKhoaHoc}}</p>
                        <p class="card-text">Tình trạng: {{sales.teacher.tinhTrang}}</p>
                        <a href="https://www.facebook.com/profile.php?id=100012712995335" class="btn btn-primary">Xem chi tiết</a>
                    </div>
                </div>
            </div>
        </div>
   
        <div class="col-lg-9" style="margin-top: 0px; ">
            <p><h2>{{sales.title}}</h2></p>
            <iframe width="1000px" height="500px" src="https://www.youtube.com/embed/{{sales.idVideo}}" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>
        </div>
        
     </div>
</div>
<script>
    var nameC = $('#courses').data().name
    var idC = $('#courses').data().id
    
        
    
    function checkBuy(){
        $.ajax({
            url: "/users/check-buy/"+idC,
                type: "POST"
        })
        .then((data) =>{
            if(data.code === 200)
            {
                alert('Mời bạn mua khóa học '+  nameC)
                window.location.href = "/users"
            }
            else if(data.code === 502){
                alert('Xin bạn thông cảm chúng tôi đang trong quá trình hoàn thiện khóa học!!!')
                
            }
            else{
                alert('Không tìm thấy kháo học')
            }
        })
        .catch(error =>{
            console.log('lỗi')
        })
    }
</script>
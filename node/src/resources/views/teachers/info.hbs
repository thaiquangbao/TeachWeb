<div class="mt-4">
    <div class="row" >
        {{#each teachers}}
        <div class="col-sm-6 col-lg-4" >
            <div class="card card-teacher-item"  style="height: 500px; margin-top: 20px; border-width: 5px ; border-color: whitesmoke;">
                <img class="card-img-top" style="height: 200px; width: 200px;" src="{{this.img}}" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">{{this.hoTen}}</h5>
                    <p class="card-text">Giới tính : {{this.gioiTinh}}</p>
                    <p class="card-text">Lớp : {{this.lop}}</p>
                    <p class="card-text">Mô tả : {{this.description}}</p>
                    
                </div>
                <div class="card-last" style="text-align: center; margin-bottom: 30px;">
                    <a href="#" class="btn btn-primary">Đăng kí</a>
                </div>
            </div>
        </div>
        {{/each}}
        
    </div>
    <div class="setteach" style="margin-top: 50px; text-align: center;">
            <a href="/editteachers" class="btn btn-primary" style="height: 50px; width: 200px; text-align: center; background-color: chocolate; border-color: chocolate;">Chỉnh sửa giảng viên</a>
    </div>
</div>
